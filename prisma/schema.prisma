generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  password  String
  name      String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  role      String     @default("USER")
  habits    Habit[]
  lifeLists LifeList[]
  memories  Memory[]
  people    Person[]
  products  Product[]
}

model Product {
  id          String     @id @default(cuid())
  name        String
  token       String     @unique
  userId      String
  createdAt   DateTime   @default(now())
  active      Boolean    @default(true)
  graduatedAt DateTime?
  state       CharmState @default(ACTIVE)
  type        CharmType  @default(MEMORY)
  habits      Habit[]
  lifeLists   LifeList[]
  memories    Memory[]
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Memory {
  id          String   @id @default(cuid())
  title       String
  description String
  date        DateTime
  time        String?
  location    String?
  emotions    String[]
  mood        String?
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  productId   String?
  events      String[]
  peopleIds   String[]
  media       Media[]
  product     Product? @relation(fields: [productId], references: [id])
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([productId])
}

model Media {
  id         String   @id @default(cuid())
  url        String
  type       String
  memoryId   String
  createdAt  DateTime @default(now())
  size       Int      @default(0)
  orderIndex Int      @default(0)
  memory     Memory   @relation(fields: [memoryId], references: [id], onDelete: Cascade)

  @@index([memoryId])
}



model LifeList {
  id          String         @id @default(cuid())
  name        String
  description String?
  template    String?
  productId   String
  userId      String
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  product     Product        @relation(fields: [productId], references: [id], onDelete: Cascade)
  user        User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  items       LifeListItem[]

  @@index([productId])
  @@index([userId])
}

model LifeListItem {
  id          String      @id @default(cuid())
  title       String
  description String?
  peopleIds   String[]
  whenType    String?
  targetDate  DateTime?
  status      String      @default("pending")
  livedAt     DateTime?
  lifeListId  String
  orderIndex  Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  experience  Experience?
  lifeList    LifeList    @relation(fields: [lifeListId], references: [id], onDelete: Cascade)

  @@index([lifeListId])
}

model Person {
  id        String   @id @default(cuid())
  name      String
  avatarUrl String?
  userId    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Experience {
  id         String            @id @default(cuid())
  reflection String?
  location   String?
  date       DateTime
  peopleIds  String[]
  itemId     String            @unique
  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt
  item       LifeListItem      @relation(fields: [itemId], references: [id], onDelete: Cascade)
  media      ExperienceMedia[]
}

model ExperienceMedia {
  id           String     @id @default(cuid())
  url          String
  type         String
  size         Int        @default(0)
  experienceId String
  orderIndex   Int        @default(0)
  createdAt    DateTime   @default(now())
  experience   Experience @relation(fields: [experienceId], references: [id], onDelete: Cascade)

  @@index([experienceId])
}

model Habit {
  id               String     @id @default(cuid())
  title            String
  description      String?
  focusArea        String
  frequency        String     @default("daily")
  targetDays       Int        @default(66)
  currentStreak    Int        @default(0)
  longestStreak    Int        @default(0)
  totalCompletions Int        @default(0)
  isActive         Boolean    @default(true)
  graduatedAt      DateTime?
  archivedAt       DateTime?
  productId        String
  userId           String
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  product          Product    @relation(fields: [productId], references: [id], onDelete: Cascade)
  user             User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  logs             HabitLog[]

  @@index([productId])
  @@index([userId])
}

model HabitLog {
  id        String   @id @default(cuid())
  date      DateTime
  notes     String?
  habitId   String
  createdAt DateTime @default(now())
  habit     Habit    @relation(fields: [habitId], references: [id], onDelete: Cascade)

  @@unique([habitId, date])
  @@index([habitId])
}

enum CharmType {
  MEMORY
  LIFE
  HABIT
}

enum CharmState {
  ACTIVE
  GRADUATED
  CLOSED
}
